{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "name": "@cocos-fe/chrome-tools",
    "version": "1.2.0",
    "description": "cocos 内部开发人员的提效小工具",
    "homepage_url": "https://cocos-creator.github.io/fe-team/",
    "manifest_version": 3,
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["https://github.com/cocos/*", "https://github.com/cocos-creator/*"],
            "css": ["./github/style.css"],
            "js": ["./github/index.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://forum.cocos.org/*"],
            "css": ["./forum/style.css"],
            "js": ["./forum/index.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["https://deepwiki.com/*"],
            "js": ["/deepwiki/index.js"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "public/logo.png",
            "32": "public/logo.png",
            "48": "public/logo.png",
            "128": "public/logo.png"
        }
    },
    "icons": {
        "16": "public/logo.png",
        "32": "public/logo.png",
        "48": "public/logo.png",
        "128": "public/logo.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["**/*.png", "**/*.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
